<section
    class="hero-wrap hero-wrap-2"
    style="background-image: url('/images/bg_4.jpg')"
    data-stellar-background-ratio="0.5"
>
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <h1 class="mb-2 bread">Tin tức</h1>
                <p class="breadcrumbs">
                    <span class="mr-2"
                        ><a href="/">Trang chủ <i class="ion-ios-arrow-forward"></i></a
                    ></span>
                    <span>Tin tức</span>
                </p>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">
            <% stories.forEach(e => { %>
            <div class="col-md-4 ftco-animate">
                <div class="blog-entry">
                    <a
                        href="/stories/<%= e.slug %>"
                        class="block-20"
                        style="background-image: url('<%= e.thumbnail %>')"
                    >
                    </a>
                    <div class="text px-4 pt-3 pb-4">
                        <div class="meta">
                            <div>
                                <%= e.createdAt.toLocaleDateString('en-US', { day: 'numeric', month: 'short', year:
                                'numeric' }); %>
                            </div>
                            <div><%= e.user.name %></div>
                        </div>
                        <h3 class="heading">
                            <a href="/stories/<%= e.slug %>"><%= e.title %></a>
                        </h3>
                        <p class="clearfix">
                            <a href="/stories/<%= e.slug %>" class="float-left read">Read more</a>
                            <a href="#" class="float-right meta-chat"><span class="icon-chat"></span> <%= e.comment %></a>
                        </p>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
        <div class="row no-gutters my-5">
            <% if (pages > 1) { %>
            <div class="col text-center mb-3">
                <div class="block-27">
                    <ul>
                        <li>
                            <% if (page > 1) { %>
                            <a href="/admin/stories?page=<%= page - 1 %>">
                                <i class="far fa-angle-left"></i>
                            </a>
                            <% } else { %>
                            <a href="#">
                                <i class="far fa-angle-left"></i>
                            </a>
                            <% } %>
                        </li>
                        <% for(var i = 1; i <= pages; i++) { %> <% if (page == i) { %>
                        <li class="active">
                            <a href="/admin/stories?page=<%= i %>"> <%= i %> </a>
                        </li>
                        <% } else { %>
                        <li>
                            <a href="/admin/stories?page=<%= i %>"> <%= i %> </a>
                        </li>
                        <% } %> <% } %>
                        <li>
                            <% if (page < pages) { %>
                            <a href="/admin/stories?page=<%= page + 1 %>">
                                <i class="far fa-angle-right"></i>
                            </a>
                            <% } else { %>
                            <a href="#">
                                <i class="far fa-angle-right"></i>
                            </a>
                            <% } %>
                        </li>
                    </ul>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</section>
