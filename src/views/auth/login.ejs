<section class="ftco-section ftco-no-pt ftco-no-pb my-5">
    <div class="container">
        <div class="row d-flex">
            <div class="col-md-4 col-lg-5 ftco-animate img img-2" style="background-image: url(/images/bg_6.jpg)"></div>
            <div class="col-md-1 col-lg-2"></div>
            <div class="col-md-7 col-lg-5 ftco-animate makereservation p-4 p-md-5">
                <div class="heading-section ftco-animate mb-5">
                    <span class="subheading">KACoffee</span>
                    <h2 class="mb-4">Đăng nhập</h2>
                </div>
                <form id="login-form" action="/auth/login" method="post">
                    <div class="form-group">
                        <label for="">Email</label>
                        <input name="email" type="email" class="form-control" placeholder="Enter your email!" />
                    </div>
                    <div class="form-group">
                        <label for="">Mật khẩu</label>
                        <input
                            name="password"
                            type="password"
                            class="form-control"
                            placeholder="Enter your password!"
                        />
                    </div>
                    <div class="form-group text-right">
                        <a href="">Quên mật khẩu?</a>
                    </div>
                    <div>
                        <button type="submit" class="submit-btn btn btn-primary">Đăng nhập</button>
                        <span>Bạn chưa có tài khoản? <a href="/auth/register">Đăng ký</a></span>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<script>
    document.querySelector('.submit-btn').addEventListener('click', (event) => {
        document.querySelectorAll('#login-form input').forEach((e) => {
            if (e.value == '') {
                event.preventDefault();
                sAlert.fire('Thất bại?', 'Email và mật khẩu không được bỏ trống', 'warning');
            }
        });
    });
</script>
<% if (!success) { %>
<script>
    sAlert.fire('Thất bại?', '<%= message %>', 'warning');
</script>
<% } %>
