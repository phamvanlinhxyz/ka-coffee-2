<section class="py-4 my-4">
    <div class="container">
        <div class="row justify-content-center pb-2">
            <div class="col-md-7 text-center heading-section ftco-animate">
                <span class="subheading">Quản lý</span>
                <h2 class="mb-4">Thêm mã giảm giá</h2>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <label>Thêm mã giảm giá</label>
                <img class="image-preview rounded mb-4" src="/images/ka-discount.png" width="100%" />
            </div>
            <div class="col-md-8">
                <!-- Form add discount -->
                <form id="add-discount-form" action="/admin/discount/create" method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Tên mã giảm giá</label>
                                <input name="name" type="text" class="form-control" placeholder="Tên mã giảm giá" />
                            </div>
                            <div class="form-group">
                                <label>Hình thức giảm giá</label>
                                <select class="custom-select form-control" name="category" id="category">
                                    <option value="money">Giảm giá tiền</option>
                                    <option value="rate">Giảm phần trăm</option>
                                    <option value="shippingFee">Giảm tiền ship</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Phần trăm giảm hoặc số tiền giảm</label>
                                <input
                                    name="minusPrice"
                                    type="text"
                                    class="form-control"
                                    placeholder="Số tiền giảm (₫) hoặc phần trăm giảm"
                                />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label>Đơn tối thiểu</label>
                                    <input
                                        name="minOrder"
                                        type="text"
                                        class="form-control"
                                        placeholder="Đơn tối thiểu (₫)"
                                    />
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Khách hàng sử dụng</label>
                                    <select class="custom-select form-control" name="rankUser" id="category">
                                        <option value="Tất cả">Tất cả</option>
                                        <option value="Thường">Thường</option>
                                        <option value="Bạc">Bạc</option>
                                        <option value="Vàng">Vàng</option>
                                        <option value="Kim cương">Kim cương</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Thời gian bắt đầu</label>
                                <input name="startTime" type="datetime-local" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Thời gian kết thúc</label>
                                <input name="endTime" type="datetime-local" class="form-control" />
                            </div>
                            <div class="form-group float-right">
                                <button class="btn btn-primary">Thêm mã giảm giá</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<script>
    var form = document.querySelector('#add-discount-form');
    form.addEventListener('submit', (e) => {
        var valid = true;
        e.preventDefault();
        form.querySelectorAll('input').forEach((input) => {
            if (input.name != 'minusPrice' && input.value == '') {
                sAlert.fire('Thất bại!', 'Các thông tin không được bỏ trống', 'warning');
                valid = false;
            }
        });
        if (valid) {
            sAlert.fire('Thành công!', 'Đã thêm mã giảm giá mới', 'success').then(() => {
                form.submit();
            });
        }
    });
</script>
